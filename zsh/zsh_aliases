# some more ls aliases
alias ls='ls --color=auto'
alias ll='ls -alhF'
alias la='ls -A'
alias l='ls -CF'
alias llast5='ls -Artls | tail -n5'
alias llast='ls -t | tail -n1'
alias lll='ls -Ahtls'
alias lll5='ls -Ahrtls | tail -n5 | tac'
alias l.='ls -d .* --color=auto'

alias ..='cd ..'
alias ...='cd ../../'
alias ....='cd ../../../'
alias .....='cd ../../../../'
alias ......='cd ../../../../../'
alias .5='cd ../../../../..'

alias d='du -sh *'

alias up='doas apk update; doas apk upgrade -Ua'
alias logs='doas less +F /var/log/messages'

alias shortcuts="bat $F_CONFIG/tools/shortcuts.md"

alias cdvim='cd ~/.vim'

alias editvim='vim ~/.vim/vimrc'
alias editssh='vim ~/.ssh/known_hosts ~/.ssh/config ~/.ssh/configs/cluster.conf'
alias editzsh="vim $F_CONFIG/zsh/*"
alias editsway="vim $F_CONFIG/sway/*"
alias editshortcuts="vim $F_CONFIG/tools/shortcuts.md"
alias editbsp="vim $F_CONFIG/bspwm/bspwmrc $F_CONFIG/sxhkd/sxhkdrc $F_CONFIG/dunst/dunstrc $F_CONFIG/picom/picom.conf"
alias editsuckless='vim ~/apps/suckless/contxtl-st/config.def.h ~/apps/suckless/contxtl-dmenu/config.def.h'
alias editsfeed='vim $F_CONFIG/sfeed/sfeed_music_rc'
alias editinstall="vim $F_CONFIG/install/roles/*/tasks/main.yml $F_CONFIG/install/roles/*/vars/main.yml"
alias editactions="vim $F_CONFIG/tools/actions/actions.sh $F_CONFIG/tools/actions"
alias editdata="vim $F_CONFIG/tools/actions/data/*"
alias editmusic="vim ~/notes/trax.yml $F_CONFIG/tools/actions/data/music_tags"

#TODO: Create a global config file for all these parameters
alias versions="$F_CONFIG/tools/versions.sh"

alias c='clear'

# Colorize the grep command output for ease of use (good for log files)##
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

#Pipe to clipboad via command | copy
alias copy='wl-copy'

alias cwd='pwd | copy; echo "copied current path"'

#Random password generator
alias genpass='< /dev/urandom tr -dc A-Za-z0-9 | head -c${1:-22};echo;'


#Git aliases
alias gits='git status'
alias gitd='superdiff'
alias gita='git add -A'
alias gitc='git commit -m '
alias gitpl='git pull'
alias gitp='git push'
alias gitpom='git push -u origin master'
alias gittree='git log --graph --abbrev-commit --oneline'
alias githttptossh='sed -i "s/https:\/\/github\.com\//git@github\.com:/" "$(git rev-parse --show-toplevel)"/.git/config'
alias gitignore='wget https://www.gitignore.io/api/vim -O .gitignore'
alias licenseMIT='wget https://raw.githubusercontent.com/git/git-scm.com/main/MIT-LICENSE.txt'

#Task aliases
alias taska='task add'
alias taskm='task modify'

alias taskaf='task add project:flow'
alias taskafl='task add project:flow priority:L'
alias taskafm='task add project:flow priority:M'
alias taskafh='task add project:flow priority:H'

alias vitf='vit project:flow'


#Docker aliases
alias dcu='docker-compose -f *-compose.yml up'
alias dps='docker ps'
alias dpsa='docker ps -a'
alias docker-ip="docker inspect --format='{{range .NetworkSettings.Networks}}{{.IPAddress}}{{end}}' "


#Check public IP
alias whatismyip='curl https://ipinfo.io/ip'

#Copy last executed docmmand to clipboard (needs X)
alias copylast='history | fzf +s --tac | cut -d " " -f 4- | copy'
alias cl=copylast

alias listignored='find . -type f  | git check-ignore --stdin'

alias yta='yt-dlp -x -f bestaudio/best --no-playlist'
alias ytamax='yt-dlp -x -f bestaudio/best --write-desktop-link --write-thumbnail --embed-thumbnail --prefer-free-formats'
alias ytv='yt-dlp -f 244+bestaudio'

alias config='/usr/bin/git --git-dir=$HOME/.config/cfg-perso --work-tree=$HOME'

alias today='date "+%Y-%m-%d"'
alias now='date "+%H:%M:%S"'

#alias tmux='tmux attach || tmux'

alias tmux='tmux attach || tmux'

alias note='vim $(date +%F+%T).md'

alias acmd='docker run -it -v $(pwd):/workdir ac'

insert_command_output() {
    # Replace 'your_command_here' with the command you want to run
    local output="$(fzf)"
    LBUFFER+="Coucou $output au revoir"
}
zle -N insert_command_output
bindkey '^X^O' insert_command_output
