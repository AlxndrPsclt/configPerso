shopt -s expand_aliases

alias search="apt-cache search"

# some more ls aliases
alias ls='ls --color=auto'
alias ll='ls -alhF'
alias la='ls -A'
alias l='ls -CF'
alias llast='ls -Artls | tail -n1'


alias ..='cd ..'
alias ...='cd ../../'
alias ....='cd ../../../'
alias .....='cd ../../../../'
alias ......='cd ../../../../../'
alias .5='cd ../../../../..'

alias 'p'='cd -'
alias d='du -sh *'

alias vimrc='vim ~/.vim/vimrc'
alias cdvim='cd ~/.vim'

alias torb='~/Documents/Apps/Security/tor-browser_en-US/start-tor-browser'

#TODO: Create a global config file for all these parameters
alias shortcuts='less ~/.config/perso/shortcuts'
alias eshortcuts='vim ~/.config/perso/shortcuts'
alias versions='~/.config/perso/versions.sh'

alias c='clear'

# Colorize the grep command output for ease of use (good for log files)##
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'




# Appends last command to my system_install.sh script to reinstall environement easy.
alias sav='~/.config/perso/saveCommand.sh'
alias editsav='vim ~/.config/perso/saveCommand.sh'

alias adminTools='~/.config/perso/adminTools.sh'


alias vidle="python -m idlelib &"

#Pipe to clipboad via command | copy
alias copy='xclip -sel clip'

alias path='pwd | copy'

#Random password generator
alias genpass='< /dev/urandom tr -dc A-Za-z0-9 | head -c${1:-22};echo;'


#Git aliases
alias gitst='git status'

#Docker aliases
alias dcu='docker-compose -f *-compose.yml up'
alias dps='docker ps'
alias dpsa='docker ps -a'
alias docker-ip="docker inspect --format='{{range .NetworkSettings.Networks}}{{.IPAddress}}{{end}}' "


#Check public IP
alias whatismyip="curl https://ipinfo.io/ip"

#Copy last executed docmmand to clipboard (needs X)
alias copylast="history |tail -n2 |head -n1 | cut -d ' ' -f4- | copy"
