URxvt.perl-lib: ~/.urxvt/ext/

URxvt.perl-ext-common: fullscreen,keyboard-select,resize-font

URxvt.keysym.F11: perl:fullscreen:switch

URxvt.keysym.F10: perl:keyboard-select:activate

URxvt.keysym.C-KP_Subtract: resize-font:smaller
URxvt.keysym.C-KP_Add:      resize-font:bigger
URxvt.keysym.C-equal:       resize-font:reset
URxvt.keysym.C-question:    resize-font:show
URxvt.keysym.A-S-Left:      string:\033[1;4D
URxvt.keysym.A-S-Right:     string:\033[1;4C


! Deactivate some annoying popup when ctrl-shift is pressed
URxvt.iso14755: false
URxvt.iso14755_52: false

URxvt.keysym.Control-Shift-F2: command:\000

! Reset background color
URxvt.keysym.C-9: command:\033]11;base00\007
